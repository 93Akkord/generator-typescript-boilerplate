        "watch": "node ./scripts/tsc-watcher.js"
    },
    "dependencies": {
        "yeoman-generator": "^3.2.0"
    },
    "devDependencies": {
        "@types/lodash": "^4.14.123",
        "@types/ncp": "^2.0.1",
        "@types/node": "^11.11.3",
        "@types/yeoman-generator": "^3.1.0",
        "lodash": "^4.17.11",
        "ncp": "^2.0.0",
        "tsc-watch": "^2.1.2",
        "tslint": "^5.14.0",
        "typescript": "^3.3.3333",
        "typescript-tslint-plugin": "^0.3.1"
    }
}
