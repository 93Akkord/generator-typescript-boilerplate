{
    "name": "generator-typescript-boilerplate",
    "version": "0.1.0",
    "description": "Generate a boilerplate TypeScript project.",
    "main": "./generators/app/index.js",
    "files": [
        "generators"
    ],
    "keywords": [
        "yeoman-generator"
    ],
    "scripts": {
