{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "generators",
        "lib": [
            "es6",
            "dom",
            "es2016"
        ],
        "sourceMap": false,
        "rootDir": "./src",
        "plugins": [{
            "name": "typescript-tslint-plugin"
        }],
        "noImplicitUseStrict": true
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./src/**/templates",
        "node_modules",
        ".vscode-test"
    ]
}
